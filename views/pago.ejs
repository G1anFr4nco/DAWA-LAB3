<!DOCTYPE html>
<html>
<head>
    <title>Selección de Pago</title>
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css">
</head>
<body>
    <div class="container mt-5">
        <h1 class="text-center">Selección de Pago</h1>
        <hr>
        <form action="/confirmacion" method="post">
            <input type="hidden" name="curso" value="<%= curso %>">
            <% modulos.forEach(function(modulo) { %>
                <input type="hidden" name="modulos[]" value="<%= modulo %>">
            <% }); %>
            <div class="form-group">
                <label>Seleccione el método de pago:</label>
                <div class="form-check">
                    <input class="form-check-input" type="radio" id="tarjeta" name="medioPago" value="Tarjeta de Crédito" required>
                    <label class="form-check-label" for="tarjeta">Tarjeta de Crédito</label>
                </div>
                <div class="form-check">
                    <input class="form-check-input" type="radio" id="efectivo" name="medioPago" value="Efectivo" required>
                    <label class="form-check-label" for="efectivo">Efectivo</label>
                </div>
            </div>
            <button type="submit" class="btn btn-primary">Siguiente</button>
        </form>
    </div>
</body>
</html>
